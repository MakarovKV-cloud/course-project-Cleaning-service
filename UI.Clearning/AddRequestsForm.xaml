<Window x:Class="UI.Cleaning.AddRequestsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание заявки - Клининг сервис"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание заявки на клининг" FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" Text="Площадь уборки (м²):" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="AreaTextBox" Height="25" Margin="0,20,0,5" TextChanged="AreaTextBox_TextChanged"/>

        <TextBlock Grid.Row="2" Text="Услуги:" Margin="0,0,0,5"/>
        <ItemsControl Grid.Row="2" x:Name="ServicesItemsControl" Margin="0,20,0,5">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsSelected}" 
                              Margin="0,2" Checked="ServiceCheckBox_Changed" Unchecked="ServiceCheckBox_Changed"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <TextBlock Grid.Row="3" Text="Дата клининга:" Margin="0,0,0,5"/>
        <DatePicker Grid.Row="3" x:Name="CleaningDatePicker" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="4" Text="Город:" Margin="0,0,0,5"/>
        <ComboBox Grid.Row="4" x:Name="CityComboBox" Height="25" Margin="0,20,0,5" DisplayMemberPath="Name"/>

        <TextBlock Grid.Row="5" Text="Район:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" x:Name="DistrictTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="6" Text="Адрес:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="6" x:Name="AddressTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="7" Text="Итоговая стоимость:" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBlock Grid.Row="7" x:Name="TotalCostTextBlock" FontSize="16" FontWeight="Bold" 
                   Foreground="Green" Margin="0,20,0,5" Text="0 руб."/>

        <Button Grid.Row="9" Content="Перейти к оплате" Click="ProceedToPaymentButton_Click" 
                Height="35" FontSize="14" Margin="0,20,0,5"/>
        <Button Grid.Row="9" Content="Назад" Click="BackButton_Click" 
                Height="30" Margin="0,100,0,5"/>
    </Grid>
</Window>