<Window x:Class="UI.Cleaning.AdminManagementForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Панель администратора - Клининг сервис"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Пользователи">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" x:Name="UsersDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="0,0,0,10" SelectionChanged="UsersDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="200"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="100"/>
                            <DataGridTextColumn Header="Дата регистрации" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Изменить роль:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="RoleComboBox" Width="100" IsEnabled="False">
                            <system:String>Client</system:String>
                            <system:String>Cleaner</system:String>
                            <system:String>Admin</system:String>
                        </ComboBox>
                        <Button x:Name="ApplyRoleButton" Content="Применить" Click="ApplyRoleButton_Click" 
                                Height="25" Width="80" Margin="10,0,0,0" IsEnabled="False"/>
                        <Button x:Name="DeleteUserButton" Content="Удалить" Click="DeleteUserButton_Click" 
                                Height="25" Width="80" Margin="10,0,0,0" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Заявки">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" x:Name="RequestsDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="0,0,0,10" SelectionChanged="RequestsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                            <DataGridTextColumn Header="Клиент" Binding="{Binding ClientName}" Width="150"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding FullAddress}" Width="200"/>
                            <DataGridTextColumn Header="Дата" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="80"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                            <DataGridTextColumn Header="Клинер" Binding="{Binding CleanerName}" Width="150"/>
                            <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0} руб.}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="RequestStatusComboBox" Width="100" IsEnabled="False">
                            <system:String>Новая</system:String>
                            <system:String>В работе</system:String>
                            <system:String>Завершена</system:String>
                            <system:String>Отмена</system:String>
                        </ComboBox>

                        <TextBlock Text="Клинер:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <ComboBox x:Name="CleanerComboBox" Width="150" IsEnabled="False" DisplayMemberPath="FullName"/>

                        <Button x:Name="UpdateRequestButton" Content="Обновить" Click="UpdateRequestButton_Click" 
                                Height="25" Width="80" Margin="20,0,0,0" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Города">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" x:Name="CitiesDataGrid" AutoGenerateColumns="False" 
                              IsReadOnly="True" Margin="0,0,0,10" SelectionChanged="CitiesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBox x:Name="NewCityTextBox" Width="200" Height="25" 
                                 Margin="0,0,10,0" VerticalContentAlignment="Center"/>
                        <Button Content="Добавить город" Click="AddCityButton_Click" 
                                Height="25" Width="100" Margin="0,0,10,0"/>
                        <Button x:Name="DeleteCityButton" Content="Удалить город" Click="DeleteCityButton_Click" 
                                Height="25" Width="100" IsEnabled="False"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <Button Content="Выйти" Click="LogoutButton_Click" 
                Height="30" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>