<Window x:Class="UI.Cleaning.RegistrationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация - Клининг сервис"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Создание аккаунта" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Фамилия:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="LastNameTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="2" Text="Имя:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" x:Name="FirstNameTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="3" Text="Отчество:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="MiddleNameTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="4" Text="Логин:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" x:Name="LoginTextBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="5" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="5" x:Name="PasswordBox" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="6" Text="Повторите пароль:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="6" x:Name="ConfirmPasswordBox" Height="25" Margin="0,20,0,5"/>

        <Button Grid.Row="7" Content="Создать аккаунт" Click="CreateAccountButton_Click" 
                Height="30" Margin="0,10,0,5"/>
    </Grid>
</Window>