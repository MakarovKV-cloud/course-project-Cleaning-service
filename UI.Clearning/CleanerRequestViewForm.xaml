<Window x:Class="UI.Cleaning.CleanerRequestViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель клинера - Клининг сервис"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Мои заявки" FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Фильтр по статусу:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="120" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все" IsSelected="True"/>
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="Завершена"/>
                <ComboBoxItem Content="Отмена"/>
            </ComboBox>

            <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="20,0,10,0"/>
            <ComboBox x:Name="SortComboBox" Width="120" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem Content="По дате (новые)" IsSelected="True"/>
                <ComboBoxItem Content="По дате (старые)"/>
                <ComboBoxItem Content="По статусу"/>
            </ComboBox>


            <Button Content="Обновить" Click="RefreshButton_Click" 
                    Height="25" Width="80" Margin="20,0,0,0"/>
        </StackPanel>

        <DataGrid Grid.Row="2" x:Name="RequestsDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" Margin="0,0,0,10" SelectionChanged="RequestsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding FullAddress}" Width="200"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="80"/>
                <DataGridTextColumn Header="Услуги" Binding="{Binding Services}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0} руб.}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <ComboBox x:Name="StatusComboBox" Width="120" Margin="0,0,10,0" 
                      IsEnabled="False" SelectionChanged="StatusComboBox_SelectionChanged">
                <ComboBoxItem Content="Новая"/>
                <ComboBoxItem Content="В работе"/>
                <ComboBoxItem Content="Завершена"/>
            </ComboBox>
            <Button x:Name="UpdateStatusButton" Content="Обновить статус" Click="UpdateStatusButton_Click" 
                    Height="30" Width="120" IsEnabled="False"/>
            <Button Content="Выйти" Click="LogoutButton_Click" 
                    Height="30" Width="80" Margin="20,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>