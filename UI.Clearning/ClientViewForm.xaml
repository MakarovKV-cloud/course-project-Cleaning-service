<Window x:Class="UI.Cleaning.ClientViewForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель клиента - Клининг сервис"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Мои заявки" FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1" x:Name="RequestsDataGrid" AutoGenerateColumns="False" 
                  IsReadOnly="True" Margin="0,0,0,10"
                  SelectionChanged="RequestsDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Площадь" Binding="{Binding Area}" Width="80"/>
                <DataGridTextColumn Header="Дата уборки" Binding="{Binding CleaningDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Адрес" Binding="{Binding FullAddress}" Width="200"/>
                <DataGridTextColumn Header="Услуги" Binding="{Binding Services}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalCost, StringFormat={}{0} руб.}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать заявку" Click="CreateRequestButton_Click" 
                    Height="30" Width="120" Margin="0,0,10,0"/>
            <Button Content="Удалить заявку" Click="DeleteRequestButton_Click" 
                    Height="30" Width="120" Margin="0,0,10,0" x:Name="DeleteRequestButton" IsEnabled="False"/>
            <Button Content="Выйти" Click="LogoutButton_Click" 
                    Height="30" Width="80"/>
        </StackPanel>
    </Grid>
</Window>